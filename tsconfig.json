{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/server/types"
    ]
  },
  "include": [
    "src/**/*",
    "src/server/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}